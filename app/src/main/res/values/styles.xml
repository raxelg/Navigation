    <style name="AppleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!--Favorites Item Theme -->
    <style name="AddLocationToolbarStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!--LocationInput Activity Theme -->
    <style name="LocationToolbarStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!--Menu Item Theme -->
    <style name="CustomPopupStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

</resources>
